<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/lightgrey"
    android:layout_height="match_parent">

    <ImageView
        android:src="@drawable/gcrlogo"
        android:layout_width="150dp"
        android:alpha="0.5"
        android:layout_centerInParent="true"
        android:layout_height="150dp" />
    <TextView
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:alpha="0.5"
        android:textColor="@color/tahitigold"
        android:text="@string/repopulating"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/progressBar"
        android:layout_height="wrap_content" />
    <ProgressBar
        android:id="@+id/progressBar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="200dp"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/repopulation_complete_button"
        android:text="@string/repopulation_complete_button"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/repopcontinuebutton"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:alpha="0.1"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp" />
</RelativeLayout>