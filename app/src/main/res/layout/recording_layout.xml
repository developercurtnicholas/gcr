<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:weightSum="1">


    <LinearLayout
        android:layout_weight="1"
        android:gravity="center"
        android:background="#fff"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/nameOrNumber"
            android:textStyle="bold"
            android:textColor="@color/firebush"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/play_recording_date"
            android:text="@string/no_date"
            android:textStyle="bold"
            android:textColor="#999"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/play_recording_image"
            android:background="@drawable/circle_shadow_blue"
            android:textColor="#FFF"
            android:textSize="30dp"
            android:textStyle="normal"
            android:gravity="center"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"/>

        <TextView
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_marginTop="15dp"
            android:id="@+id/playerTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:id="@+id/playerControls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/pauseButton"
                android:background="@drawable/pausebutton"
                android:layout_marginTop="19dp"
                android:layout_width="40dp"
                android:layout_marginRight="20dp"
                android:layout_height="40dp" />
            <Button
                android:layout_marginTop="19dp"
                android:background="@drawable/playbutton"
                android:id="@+id/playButton"
                android:layout_width="55dp"
                android:layout_marginRight="20dp"
                android:layout_height="55dp" />
            <Button
                android:id="@+id/stopButton"
                android:layout_marginTop="19dp"
                android:background="@drawable/stopbutton"
                android:layout_width="40dp"
                android:layout_height="40dp" />
        </LinearLayout>
        <SeekBar
            android:id="@+id/seekbar"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="10"/>

        <EditText
            android:hint="@string/no_title_description"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#999"
            android:layout_marginTop="5dp"
            android:scrollHorizontally="false"
            android:textStyle="bold"
            android:maxLines="4"
            android:inputType="textCapSentences|textMultiLine"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:id="@+id/play_recording_title_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>