<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.curt.TopNhotch.myapplication">
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE"></uses-permission>
    <uses-permission android:name="android.permission.PROCESS_OUTGOING_CALLS"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"></uses-permission>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/gcrlogo2"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >

       <service android:name="com.curt.TopNhotch.GoldCallRecorder.CallRecorderService">

        </service>
        <service android:name="com.curt.TopNhotch.GoldCallRecorder.RepopulateService"/>

        <meta-data android:name="android.app.searchable"
            android:resource="@xml/searchable"/>

        <receiver android:name="com.curt.TopNhotch.GoldCallRecorder.BackGroundRecorder">
            <intent-filter>
                <action android:name="android.intent.action.PHONE_STATE"></action>
                <action android:name="android.intent.action.NEW_OUTGOING_CALL"></action>
                <category android:name="android.intent.category.DEFAULT"></category>
            </intent-filter>
        </receiver>

        <activity android:name="com.curt.TopNhotch.GoldCallRecorder.MainActivity" android:label="@string/app_name">
            <meta-data android:name="android.app.searchable"
                android:resource="@xml/searchable"/>

            <intent-filter>
                <action android:name="android.intent.action.SEARCH"/>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

        </activity>


        <activity android:name="com.curt.TopNhotch.GoldCallRecorder.RecordingPlayer">

        </activity>

        <activity android:name="com.curt.TopNhotch.GoldCallRecorder.SettingsActivity">

        </activity>

        <activity android:name="com.curt.TopNhotch.GoldCallRecorder.RecordingComplete"
            android:theme="@style/DialogActivity"
            android:label="">

        </activity>

        <activity android:name="com.curt.TopNhotch.GoldCallRecorder.SecuritySettingsActivity">
        </activity>

        <activity android:name="com.curt.TopNhotch.GoldCallRecorder.EnterPasscodeActivity">
        </activity>

    </application>

</manifest>
